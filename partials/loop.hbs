{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="blog-item {{post_class}}">
    {{#if feature_image}}
    <div class="blog-cover">
        <a href="{{url}}"><img src="{{feature_image}}" alt="{{title}}"></a>
    </div>
    {{/if}}

    <ul class="blog-details">
        <li>{{tags}}</li>
        <li><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></li>
    </ul>

    <header>
        <h2 class="blog-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>

    <div class="blog-description">
        <p>{{excerpt words="26"}}</p>
    </div>
    
    <footer class="blog-footer">
        <a class="read-more" href="{{url}}">Read More <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
    </footer>
</article>
{{/foreach}}