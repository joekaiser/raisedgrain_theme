<!-- Header -->
<header class="base-header">
    <div class="container">
        <div class="row row-logo">
            <!-- Socialicons -->
            <div class="col-sm-4 col-md-4 hidden-xs header-top">
                {{> social}}
            </div>
            <!-- /Socialicons -->

            <!-- Logotype -->
            <div class="col-xs-12 col-sm-4 col-md-4">
                <div class="logo">
                    <a href="{{@blog.url}}">{{#if @blog.logo}}<img src="{{@blog.logo}}" alt="{{@blog.title}}" />{{else}}{{@blog.title}}{{/if}}</a>
                </div> 
            </div>
            <!-- /Logotype -->

            <!-- Search -->
            <div class="col-xs-12 col-sm-4 col-md-4 header-top pull-right">
                <div class="search-form">
                    <form id="search-form" class="navbar-form search">
                        <input type="text" id="search-input" placeholder="Type to search" class="form-control" />
                        <button class="btn btn-small btn-no-fill popup"><i class="fa fa-search input-icon"></i></button>
                    </form>
                    <div id="search-results">
                        <ul></ul>
                    </div>
                </div>
            </div>
            <!-- /Search -->
        </div>
        <!-- Menu -->
        {{navigation}}
        <!-- /Menu -->
    </div>
</header>
<!-- /Header -->